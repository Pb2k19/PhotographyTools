<?xml version="1.0" encoding="utf-8" ?>
<controls:NumEntryBase
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Photography_Tools.Components.Controls"
    x:Class="Photography_Tools.Components.Controls.NumericEntry.DoubleEntry"
    x:TypeArguments="x:Double">

    <Entry
        x:Name="MainDoubleEntry"
        Keyboard="Numeric"
        Text="0"
        TextChanged="NumEntry_TextChanged"
        Unfocused="NumEntry_Unfocused"
        Style="{StaticResource StandardEntry}"
    />
</controls:NumEntryBase>
