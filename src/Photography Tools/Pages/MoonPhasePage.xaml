<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:Photography_Tools.ViewModels"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="Photography_Tools.Pages.MoonPhasePage"
    x:DataType="viewmodels:MoonPhaseViewModel"
    Title="Moon Phase">
    
    <VerticalStackLayout
        Padding="15"
        MaximumWidthRequest="1000">

        <Label
            Text="{Binding MoonImage}"
            Style="{StaticResource LabelMedium}"
            HorizontalOptions="Center"
            FontSize="200"
        />

        <Label
            Text="{Binding MoonPhaseName}"
            Style="{StaticResource LabelLarge}"
            HorizontalOptions="Center"
        />

        <Grid
            Margin="0,25,0,0"
            ColumnSpacing="10"
            ColumnDefinitions="*,*"
            RowDefinitions="auto, auto, auto, auto">

            <Label
                Margin="0,10"
                Text="Date"
                Style="{StaticResource LabelMediumBold}" 
            />

            <Label
                Grid.Column="1"
                Margin="0,10"
                Text="Time"
                Style="{StaticResource LabelMediumBold}" 
            />

            <Border
                Grid.Row="1"
                Style="{StaticResource EntryBorder}">
                <DatePicker
                    Date="{Binding SelectedDate}"
                    FontSize="Medium"
                    HorizontalOptions="Center">
                    <DatePicker.Behaviors>
                        <toolkit:EventToCommandBehavior 
                            EventName="DateSelected" 
                            Command="{Binding CalculateCommand}" 
                        />
                    </DatePicker.Behaviors>
                </DatePicker>
            </Border>

            <Border
                Grid.Row="1"
                Grid.Column="1"
                Style="{StaticResource EntryBorder}">
                <TimePicker                    
                    Format="HH:mm"
                    Time="{Binding SelectedTime}"
                    FontSize="Medium"
                    HorizontalOptions="Center">
                    <TimePicker.Behaviors>
                        <toolkit:EventToCommandBehavior 
                            EventName="PropertyChanged" 
                            Command="{Binding SelectedTimeChangedCommand}" 
                        />
                    </TimePicker.Behaviors>
                </TimePicker>
            </Border>

            <Label
                Grid.Row="2"
                Margin="0,10"
                Text="Illumination"
                Style="{StaticResource LabelMediumBold}" 
            />

            <Label
                Grid.Row="2"
                Grid.Column="1"
                Margin="0,10"
                Text="Moon Age"
                Style="{StaticResource LabelMediumBold}" 
            />

            <Border
                Grid.Row="3"
                Style="{StaticResource EntryBorder}">
                <Entry
                    Margin="0,5"
                    IsReadOnly="True"
                    Text="{Binding IlluminationPerc}"
                    HorizontalOptions="FillAndExpand"
                    HorizontalTextAlignment="Center"
                    FontSize="Medium">
                </Entry>
            </Border>

            <Border
                Grid.Row="3"
                Grid.Column="1"
                Style="{StaticResource EntryBorder}">
                <Entry
                    Margin="0,5"
                    IsReadOnly="True"
                    Text="{Binding MoonAge}"
                    HorizontalOptions="FillAndExpand"
                    HorizontalTextAlignment="Center"
                    FontSize="Medium">
                </Entry>
            </Border>
        </Grid>
    </VerticalStackLayout>
</ContentPage>